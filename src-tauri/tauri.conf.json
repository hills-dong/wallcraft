{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WallCraft",
  "version": "1.0.0",
  "identifier": "com.hillsdong.wallcraft",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "vite build",
    "beforeDevCommand": "vite dev --port 1420"
  },
  "app": {
    "windows": [
      {
        "title": "WallCraft",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "entitlements": "entitlements.plist",
      "infoPlist": "Info.plist"
    }
  }
}
